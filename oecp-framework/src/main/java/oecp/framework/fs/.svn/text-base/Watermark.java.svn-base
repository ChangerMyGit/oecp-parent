package oecp.framework.fs;

import java.awt.Color;
import java.awt.Font;

/**
 * 水印设置
 * 
 * @author yongtree
 * @date 2011-10-25 下午05:51:13
 * @version 1.0
 * 
 */
public class Watermark {
	public final static int CENTER = 0;
	public final static int TOP_LEFT = 1;
	public final static int TOP_RIGHT = 2;
	public final static int BOTTOM_LEFT = 3;
	public final static int BOTTOM_RIGHT = 4;

	private String imagePath;
	private String text;

	private String fontName = "宋体";
	private int fontStyle = Font.PLAIN;
	private Color color = Color.GRAY;
	private int fontSize = 30;
	private int alpha = 1;
	private int align = CENTER;
	private int right = 20;
	private int bottom = 20;

	private int offsetX = 20;
	private int offsetY = 20;

	public int getOffsetX() {
		return offsetX;
	}

	public void setOffsetX(int offsetX) {
		this.offsetX = offsetX;
	}

	public int getOffsetY() {
		return offsetY;
	}

	public void setOffsetY(int offsetY) {
		this.offsetY = offsetY;
	}

	public int getAlign() {
		return align;
	}

	public void setAlign(int align) {
		this.align = align;
	}

	public String getImagePath() {
		return imagePath;
	}

	public void setImagePath(String imagePath) {
		this.imagePath = imagePath;
	}

	public int getBottom() {
		return bottom;
	}

	public void setBottom(int bottom) {
		this.bottom = bottom;
	}

	public int getRight() {
		return right;
	}

	public void setRight(int right) {
		this.right = right;
	}

	public Color getColor() {
		return color;
	}

	public void setColor(Color color) {
		this.color = color;
	}

	public int getFontSize() {
		return fontSize;
	}

	public void setFontSize(int fontSize) {
		this.fontSize = fontSize;
	}

	public String getText() {
		return text;
	}

	public void setText(String text) {
		this.text = text;
	}



	public int getAlpha() {
		return alpha;
	}

	public void setAlpha(int alpha) {
		this.alpha = alpha;
	}

	public String getFontName() {
		return fontName;
	}

	public void setFontName(String fontName) {
		this.fontName = fontName;
	}

	public int getFontStyle() {
		return fontStyle;
	}

	public void setFontStyle(int fontStyle) {
		this.fontStyle = fontStyle;
	}
}
